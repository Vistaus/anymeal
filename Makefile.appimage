# See https://github.com/linuxdeploy/linuxdeploy/releases for latest release of Linux deploy tool.
# See https://github.com/linuxdeploy/linuxdeploy-plugin-qt/releases for latest release of Qt plugin.

appimage:
	$(MAKE) install DESTDIR=$(CURDIR)/AppDir
	./linuxdeploy-x86_64.AppImage --appdir AppDir --plugin qt --output appimage

test:
	docker run -ti --rm --privileged -e DISPLAY=$(DISPLAY) -v /tmp/.X11-unix:/tmp/.X11-unix -v $(CURDIR):/mnt debian:sid
